# Production Environment Configuration
ENV=production

# Server Configuration
PORT=8080

# Database Configuration
DB_HOST=production-db-host
DB_PORT=5432
DB_USER=avantpro_user
DB_PASSWORD=secure_production_password
DB_NAME=avantpro_backend
DB_SSLMODE=require

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-256-bit-key-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Authentication Security Configuration
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Trusted Proxies (comma-separated)
TRUSTED_PROXIES=10.0.0.1,192.168.1.100,127.0.0.1,::1

# CORS Configuration - Update with your production domains
CORS_ALLOW_ORIGINS=https://yourapp.com,https://www.yourapp.com
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Origin,Content-Type,Accept,Authorization,User-ID,Organization-ID